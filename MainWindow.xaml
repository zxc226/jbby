<Window x:Class="jbby.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:jbby"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="245*"/>
            <ColumnDefinition Width="152*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="GroupBox" HorizontalAlignment="Left" Height="400" Margin="10,10,0,0" VerticalAlignment="Top" Width="150">
            <Grid HorizontalAlignment="Left" Height="375" VerticalAlignment="Top" Width="130">
                <Grid.RowDefinitions>
                    <RowDefinition Height="33*"/>
                    <RowDefinition Height="92*"/>
                </Grid.RowDefinitions>
                <Button Content="Button" HorizontalAlignment="Left" Margin="29,247.6,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>
                <Button Content="Button" HorizontalAlignment="Left" Margin="29,224.6,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>
                <Button Content="Button" HorizontalAlignment="Left" Margin="29,201.6,0,0" VerticalAlignment="Top" Width="75" Grid.Row="1"/>
                <TreeView Margin="0,0,10,191.2" Grid.RowSpan="2" HorizontalAlignment="Right" Width="110" Height="174" VerticalAlignment="Bottom">
                    <Button Background="#FFE57272" Content="添加"/>
                    <Button Content="编辑"/>
                    <Button Content="删除"/>
                    <Button Content="应用"/>
                </TreeView>
                <Label Content="Label" HorizontalAlignment="Left" Margin="10,109.8,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="94"/>
                <Label Content="Label" HorizontalAlignment="Left" Margin="10,139.8,0,0" Grid.Row="1" VerticalAlignment="Top" Height="25" Width="94"/>
            </Grid>

        </GroupBox>
        <GroupBox Header="GroupBox" HorizontalAlignment="Left" Height="185" Margin="190,225,0,0" VerticalAlignment="Top" Width="275">
            <TextBox Height="150" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="235"/>
        </GroupBox>
        <GroupBox Header="GroupBox" HorizontalAlignment="Left" Height="185" Margin="470,225,0,0" VerticalAlignment="Top" Width="314" Grid.ColumnSpan="2">
            <TextBox Height="149" Margin="10,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" HorizontalAlignment="Left" Width="286"/>
        </GroupBox>
        <DataGrid HorizontalAlignment="Left" Height="210" Margin="190,0,0,200" VerticalAlignment="Bottom" Width="594" Grid.ColumnSpan="2" SelectionChanged="DataGrid_SelectionChanged">
            <DataGrid.Columns>
                <DataGridTextColumn Header="开始符号"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="结束符号"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="类型"/>
                <DataGridTextColumn Binding="{x:Null}" ClipboardContentBinding="{x:Null}" Header="字体颜色"/>
            </DataGrid.Columns>
        </DataGrid>

    </Grid>
</Window>
